@model Portal.AdminSystem.Models.SearchBooking
@using GridMvc.Html
@{
    ViewBag.Title = "Search Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="Container2">
            <div class="left">
                <img src="~/Images/Execcare.png" width:"100%"style="display: block;" />
                <h4 class="greyPortal"><strong>@ViewBag.Title</strong></h4>
            </div>
            <p class="right">
                <img src="~/Images/healthinsite.png" width:"100%"style="display: block;" />
            </p>
            <br />
            <br />
            <hr class="exechr" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group greyPortal">
                @Html.LabelFor(model => model.SearchSubject, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SearchSubject, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SearchSubject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group greyPortal">
                @Html.LabelFor(model => model.SearchMemberID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SearchMemberID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SearchMemberID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="portalbtn btn-default" />
                    <input type="button" id="cancel" value="Cancel" class="portalbtn btn-default" onclick="location.href='@Url.Action("Index","Home")'; " />
                </div>
            </div>
        </div>
        </div>
<div class="Container2">
    @Html.Grid(Model.BookingResults).Columns(columns =>
   {
       columns.Add(m => m.MemberID)
       .Titled("")
       .Sanitized(false)
       .Encoded(false)
       .RenderValueAs(u =>
        @<strong>
            @Html.ActionLink("View", "Details", new { id = u.ID }) |
          @Html.ActionLink("Update", "Edit", new { id = u.ID })
        </strong>);
       columns.Add(c => c.Subject).Titled("Subject");
       columns.Add(c => c.StartDateTime).Titled("Start DateTime");
       columns.Add(c => c.EndDateTime).Titled("End DateTime");
       columns.Add(c => c.Deleted).Titled("Deleted");

   }).WithPaging(50).Sortable(false).Selectable(true)

</div>
}
<br />
<script>
    $(function () {
        pageGrids.ordersGrid.onRowSelect(function (e) {
            alert(e.row.MemberID);
        });
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

